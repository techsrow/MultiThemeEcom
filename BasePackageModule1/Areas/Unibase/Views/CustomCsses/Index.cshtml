@model IEnumerable<BasePackageModule1.Models.CustomCss>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainColorOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadingColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParagraphColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadingFont)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyFont)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MainColorOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadingColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParagraphColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadingFont)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyFont)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
