@model IEnumerable<BasePackageModule1.Models.Image>
    <!-- Breadcrumb Area -->
    <div class="breadcrumb-area" style="background-image:url(/theme/assets/img/breadcrumb/01.jpg);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="breadcrumb-inner">
                        <span>Our Gallery</span>
                        <h2 class="page-title">We have done spectacular project</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Case Studies Area -->
    <div class="case-studies-area padding-bottom-120 padding-top-110">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="case-studies-masonry-wrapper">
                        <ul class="case-studies-menu">
                            <li class="active" data-filter="*">All <span>/</span> </li>
                           
                        </ul>
                        <div class="case-studies-masonry row">

                            @if (Model.Any())
                            {
                                @foreach (var gallery in Model.OrderByDescending(c=>c.Order))
                                {
                                    <div class="col-lg-3 col-md-4 col-sm-6 masonry-item shofa">
                                        <div class="single-case-studies-item">
                                            <div class="thumb">
                                                <img src="@gallery.Img" alt="our work image">
                                                <div class="icon">
                                                    <a class="image-popup" href="@gallery.Img"><span>+</span></a>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                }
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>