@model IEnumerable<BasePackageModule3.Models.AboutUs>

    <section id="header-4">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-sm-12">
                    <h1 class="text-center" style="color:#fff !important;">About Us</h1>

                </div>
            </div>

        </div>
    </section>

    <div class="container">
        <div class="row mt-4 mb-3">
            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-lg-8 col-md-8 mt-4">
                    <h1 class="text-left" style="color:#0d2335!important;">About Us</h1>
                    <p class="text-justify">
                       
                            @Html.Raw(item.Description)

                       

                    </p>
                    <p class="text-center">
                        <button class="btn btn-primary p-2  mt-2">Learn More!</button>
                    </p>

                </div>
                <div class="col-sm-12 col-lg-4 col-md-4">
                    <img class="img-fluid" src="@Url.Content(item.Image)" />
                </div>
            }
            </div>
    </div>
