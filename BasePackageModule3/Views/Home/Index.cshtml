        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <h1 class="heading text-center" style="color:#0d2335 !important;">
                    Services
                </h1>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model._service)
            {
                <div class="col-sm-12  col-lg-3">
                    <div class="card">
                        <img src="@Url.Content(item.Image)" class="card-img-top img-fluid" alt="...">
                        <div class="card-body">
                            <h5 class="text-center">@item.Title</h5>
                            <p class="card-text">
                                @if (item.Content.Length > 88)

                                {
                                    @Html.Raw(item.Content.Substring(0, 88))<text>...</text>

                                }
                                else
                                {
                                    @Html.Raw(item.Content)

                                }
                            </p>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="p-1 btn btn-outline-secondary btn-lg btn-block">Buy Now </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


