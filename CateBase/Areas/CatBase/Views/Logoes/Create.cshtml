@model BasePackageModule2.Models.Logo

@{
    ViewData["Title"] = "Create";
}

    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">

                <h1>Create</h1>
               
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-header-right">
                    <i class="icofont icofont-spinner-alt-5"></i>
                </div>

            </div>
            <div class="card-block">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="HeaderLogo" class="control-label"></label>
                        <input name="header" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="HeaderLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FooterLogo" class="control-label"></label>
                        <input name="footer" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="FooterLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Favicon" class="control-label"></label>
                        <input name="favicon" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="Favicon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <button> <a asp-action="Index" class="btn btn-info">Back to List</a></button>
        </div>

</div>
