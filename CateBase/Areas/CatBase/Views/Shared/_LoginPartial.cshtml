@using Microsoft.AspNetCore.Identity
@using BasePackageModule2.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Settings
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" asp-area="CatBase" asp-controller="Menus" asp-action="Index">Menu</a>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">My account</a>
                <a class="dropdown-item" asp-area="CatBase" asp-action="Index" asp-controller="Users" >Users</a>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">change password</a>

                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Email">Email</a>

                <a href="#" onclick="document.getElementById('logout').submit(); return false;" class="dropdown-item">
                    Logout
                </a>
                <form id="logout" style="display: none" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </li>  
   
    }
</ul>

