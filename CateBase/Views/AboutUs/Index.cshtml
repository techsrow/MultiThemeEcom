@model IEnumerable<BasePackageModule2.Models.AboutUs>

    <section id="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <h1 class="text-center text-white text-uppercase">About Us</h1>
                </div>
            </div>

        </div>
    </section>

    <div class="container">
        <div class="row mt-4 mb-3">
            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-lg-8 col-md-8 mt-4">
                    <h1 class="text-left" style="color:#0d2335!important;">@item.Title</h1>
                    @Html.Raw(item.Description)
                </div>
                <div class="col-sm-12 col-lg-4 col-md-4">
                    <img class="img-fluid" src="@Url.Content(item.Image)" />
                </div>
            }
            </div>
    </div>
