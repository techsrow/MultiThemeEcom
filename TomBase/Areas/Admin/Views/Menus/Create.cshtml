@model BasePackageModule2.Models.Menu.Menu

@{
    ViewData["Title"] = "Create";
}

<div id="kt_content_container" class="container-xxl" data-select2-id="select2-data-kt_content_container">
    <div asp-validation-summary="All" class="text-danger"></div>






    <form asp-action="Create" enctype="multipart/form-data" id="kt_ecommerce_add_product_form" class="form d-flex flex-column flex-lg-row fv-plugins-bootstrap5 fv-plugins-framework" data-select2-id="select2-data-kt_ecommerce_add_product_form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        
        <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10" data-select2-id="select2-data-155-8mz4">
            <!--begin:::Tabs-->
            <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-bold mb-n2">
                <!--begin:::Tab item-->
                <li class="nav-item">
                    <a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#kt_ecommerce_add_product_general">General</a>
                </li>
                <li class="nav-item ml-5"> <a asp-action="Index" class="btn btn-success">Back to List</a></li>
                <!--end:::Tab item-->

            </ul>
            <!--end:::Tabs-->
            <!--begin::Tab content-->
            <div class="tab-content">
                <!--begin::Tab pane-->
                <div class="tab-pane fade active show" id="kt_ecommerce_add_product_general" role="tab-panel">
                    <div class="d-flex flex-column gap-7 gap-lg-10">
                        <!--begin::General options-->
                        <div class="card p-10">


                            <!-- Content Here -->
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                <select asp-for="Type" class="form-select  form-control">
                                    <option value="interLink">Internal Link</option>
                                    <option value="externalLink">External Link</option>
                                    <option value="customerService">Customer Service</option>
                                    <option value="usefulLinks">Useful Links</option>
                                    <option value="myAccount">My Account</option>
                                    <option value="productCollection">Product Collection</option>
                                    <option value="categoryCollection">Category Collection</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group" id="url">
                                <label asp-for="Url" class="control-label"></label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>


                            <div id="products" class="form-group" style="display: none">
                                <label asp-for="MenuProducts" class="control-label"></label>
                                <select multiple="multiple" data-style="btn-info" id="product-select" data-live-search="true" name="products" class="form-select form-control" asp-items="ViewBag.Products"></select>
                                <span asp-validation-for="MenuProducts" class="text-danger"></span>
                            </div>

                            <div id="categories" class="form-group" style="display: none">
                                <label asp-for="MenuCategories" class="control-label"></label>
                                <select multiple="multiple" data-style="btn-info" id="category-select" data-live-search="true" name="categories" class="form-select form-control" asp-items="ViewBag.Categories"></select>
                                <span asp-validation-for="MenuCategories" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Order" class="control-label"></label>
                                <input asp-for="Order" class="form-control" />
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>

                            <div id="display" class="form-group" style="display: none">
                                <label asp-for="DisplayAs" class="control-label"></label>
                                <select asp-for="DisplayAs" class="form-control">
                                    <option value="dropdown">Dropdown Menu</option>
                                    <option value="list">Product list page</option>
                                </select>
                            </div>

                            <div id="home" class="form-group form-check" style="display: none">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="ShowOnHomeScreen" /> @Html.DisplayNameFor(model => model.ShowOnHomeScreen)
                                </label>
                            </div>

                        </div>
                    </div>
                    <!--end::Tab pane-->

                </div>
                <!--end::Tab content-->

            </div>
            <div class="d-flex justify-content-end">
                <button> <a asp-action="Index" class="btn btn-info">Back to List</a></button>
                <!--begin::Button-->
                <a id="kt_ecommerce_add_product_cancel" class="btn btn-light me-5">Cancel</a>
                <!--end::Button-->
                <!--begin::Button-->
                <button type="submit" id="kt_ecommerce_add_product_submit" class="btn btn-primary">
                    <span class="indicator-label">Save Changes</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
                <!--end::Button-->
            </div>
        </div>

    </form>

    <div>

    </div>
</div>

@section styles
{
    <link href="~/lib/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>


    <script>
        $(document).ready(function() {

           

            $("#Type").change(function() {
                var selectedType = $(this).children("option:selected").val();
                if (selectedType === "interLink" || selectedType === "externalLink") {
                    $("#url").show();
                    $("#products").hide();
                    $("#display").hide();
                    $("#home").hide();
                    $("#categories").hide();

                } else if (selectedType === "productCollection") {
                    $("#categories").hide();
                    $("#url").hide();
                    $("#products").show();
                    $("#display").show();
                    $("#home").show();
                } else if (selectedType === "categoryCollection") {
                    $("#categories").show();
                    $("#url").hide();
                    $("#display").hide();
                    $("#products").hide();
                    $("#home").hide();
                }
            });


        });

    </script>

}
