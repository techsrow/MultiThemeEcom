@model BasePackageModule2.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">

    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-xxl">
            <!--begin::Post card-->
            <div class="card">
                <!--begin::Body-->
                <div class="card-body p-lg-20 pb-lg-0">
                    <!--begin::Layout-->
                    <div class="d-flex flex-column flex-xl-row">
                        <!--begin::Content-->
                        <div class="flex-lg-row-fluid me-xl-15">
                            <!--begin::Post content-->
                            <div class="mb-17">
                                <!--begin::Wrapper-->
                                <div class="mb-8">
                                    <!--begin::Info-->
                                    <div class="d-flex flex-wrap mb-6">
                                        <!--begin::Item-->
                                        <!--end::Item-->
                                        <!--begin::Item-->
                                        <div class="me-9 my-1">
                                            <!--begin::Icon-->
                                            <!--SVG file not found: icons/duotune/finance/fin006.svgFolder.svg-->
                                            <!--end::Icon-->
                                            <!--begin::Label-->
                                            <!--begin::Label-->
                                        </div>
                                        <!--end::Item-->
                                        <!--begin::Item-->
                                        <!--end::Item-->
                                    </div>
                                    <!--end::Info-->
                                    <!--begin::Title-->
                                    <a href="#" class="text-dark text-hover-primary fs-2 fw-bolder">
                                        Product Name : @Model.Name

                                    </a>
                                    <!--end::Title-->
                                    <!--begin::Container-->
                                    <div class="overlay mt-8">
                                        <!--begin::Image-->
                                        <div class="bgi-no-repeat bgi-position-center bgi-size-cover card-rounded min-h-350px" style="background-image:url('@Model.Image')"></div>
                                        <!--end::Image-->
                                        <!--begin::Links-->
                                        <div class="overlay-layer card-rounded bg-dark bg-opacity-25">
                                            <a asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger ms-3">Delete</a>
                                        </div>
                                        <!--end::Links-->
                                    </div>
                                    <!--end::Container-->
                                </div>
                                <!--end::Wrapper-->
                                <!--begin::Description-->
                                <div class="fs-5 fw-bold text-gray-600">
                                    <!--begin::Text-->
                                    <p class="mb-8">
                                        @Html.Raw(@Model.Description)

                                    </p>

                                </div>
                                <!--end::Description-->
                                <!--begin::Block-->
                                <div class="d-flex align-items-center border-1 border-dashed card-rounded p-5 p-lg-10 mb-14">
                                    <!--begin::Section-->
                                    <div class="text-center flex-shrink-0 me-7 me-lg-13">
                                        <!--begin::Avatar-->
                                        <!--end::Avatar-->
                                        <!--begin::Info-->
                                        <div class="mb-0">

                                            <span class="text-gray-700 fs-7 fw-bold d-block mt-1">Short Description</span>
                                        </div>
                                        <!--end::Info-->
                                    </div>
                                    <!--end::Section-->
                                    <!--begin::Text-->
                                    <div class="mb-0 fs-6">
                                        <div class="text-muted fw-bold lh-lg mb-2">@Html.Raw(@Model.ShortDescription)</div>

                                    </div>
                                    <!--end::Text-->
                                </div>
                                <!--end::Block-->

                            </div>
                            <!--end::Post content-->
                        </div>
                        <!--end::Content-->

                    </div>
                    <!--end::Layout-->

                </div>
                <!--end::Body-->
            </div>
            <!--end::Post card-->

            <div class="card pt-4 mb-6 mb-xl-9">
                <!--begin::Card header-->
                <div class="card-header border-0">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <h2>Slug: @Model.Slug</h2>
                    </div>
                    <!--end::Card title-->
                </div>
                <!--end::Card header-->
               
            </div>
            <div class="card pt-4 mb-6 mb-xl-9">
                <!--begin::Card header-->
                <div class="card-header border-0">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <h2>Price Details</h2>
                    </div>
                    <!--end::Card title-->
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-0 pb-5">
                    <!--begin::Table-->
                    <div id="kt_table_customers_payment_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed gy-5 dataTable no-footer" id="kt_table_customers_payment">
                                <!--begin::Table head-->
                                <thead class="border-bottom border-gray-200 fs-7 fw-bolder">
                                    <!--begin::Table row-->
                                    <tr class="text-start text-muted text-uppercase gs-0">
                                        <th class="min-w-100px sorting" tabindex="0" aria-controls="kt_table_customers_payment" rowspan="1" colspan="1" aria-label="order No.: activate to sort column ascending" style="width: 145.062px;">Basic Price</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_customers_payment" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 125px;">Discount</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_customers_payment" rowspan="1" colspan="1" aria-label="Amount: activate to sort column ascending" style="width: 119.016px;">Final Price</th>
                                        <th class="min-w-100px sorting" tabindex="0" aria-controls="kt_table_customers_payment" rowspan="1" colspan="1" aria-label="Rewards: activate to sort column ascending" style="width: 149.469px;">SKU</th>

                                    </tr>
                                    <!--end::Table row-->
                                </thead>
                                <!--end::Table head-->
                                <!--begin::Table body-->
                                <tbody class="fs-6 fw-bold text-gray-600">

                                    <tr class="odd">
                                        <!--begin::order=-->
                                        <td>
                                            <a aspp-area="" asp-controller="Products" asp-action="Index" class="text-gray-600 text-hover-primary mb-1">Rs. @Model.BasePrice</a>
                                        </td>
                                        <!--end::order=-->
                                        <!--begin::Status=-->
                                        <td>

                                            @Model.DiscountAmount
                                        </td>
                                        <!--end::Status=-->
                                        <!--begin::Amount=-->
                                        <td>@Model.FinalPrice</td>
                                        <!--end::Amount=-->
                                        <!--begin::Amount=-->
                                        <td>@Model.sku</td>
                                        <!--end::Amount=-->
                                        <!--begin::Date=-->
                                        <!--end::Date=-->
                                    </tr>

                                </tbody>
                                <!--end::Table body-->
                            </table>
                        </div>
                       
                    </div>
                    <!--end::Table-->
                </div>
                <!--end::Card body-->
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->

    
</div>


