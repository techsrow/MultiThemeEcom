                                <ul>
                                    <li><span class="post-date">@Model.CreatedAt.ToShortDateString()</span></li>
                                    
                                </ul>
                            </div>
                            <div class="blog-title"><a href="javascript:void(0)">@Model.Title</a></div>
                            <p>@Html.Raw(Model.Content)</p>
                            <hr>
                        </div>
                    </div>
