@model BasePackageModule2.ViewModels.ContactViewModel

@await Component.InvokeAsync("PageBanner")
<div class="container-fluid p-0 m-0">
    <div class="page-header page-header-big text-center">
        <h1 class="page-title text-white">Contact Us</h1>
    </div><!-- End .page-header -->





</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a>Contact us</a></li>

        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->

<div class="page-content">
    <div id="map" class="mb-5"></div><!-- End #map -->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>Address</h3>

                    <address>@Model.BusinessProfile.Address,@Model.BusinessProfile.City,@Model.BusinessProfile.State,@Model.BusinessProfile.Country - @Model.BusinessProfile.Pincode</address>
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->

            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>Start a Conversation</h3>

                    <div><a href="mailto:@Model.BusinessProfile.EmailAddress">@Model.BusinessProfile.EmailAddress</a></div>
                    <div><a href="tel:@Model.BusinessProfile.DisplayContact1">@Model.BusinessProfile.DisplayContact1</a>, <a href="tel:@Model.BusinessProfile.DisplayContact2">@Model.BusinessProfile.DisplayContact2</a>, <a href="tel:@Model.BusinessProfile.DisplayContact3">@Model.BusinessProfile.DisplayContact3,</a></div>
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->

            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>Social</h3>

                    <div class="social-icons social-icons-color justify-content-center">
                        <a href="@Model.BusinessProfile.FacebookPageURL" class="social-icon social-facebook" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                        <a href="@Model.BusinessProfile.TwitterURL" class="social-icon social-twitter" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                        <a href="@Model.BusinessProfile.InstagramPageURL" class="social-icon social-instagram" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
                        <a href="@Model.BusinessProfile.YoutubeURL" class="social-icon social-youtube" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
                        <a href="@Model.BusinessProfile.LinkedInURL" class="social-icon social-linkedin" title="LinkedIn" target="_blank"><i class="icon-pinterest"></i></a>
                    </div><!-- End .soial-icons -->
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->
        </div><!-- End .row -->

        <hr class="mt-3 mb-5 mt-md-1">
        <div class="touch-container row justify-content-center">
            <div class="col-md-9 col-lg-7">
                <div class="text-center">
                    <h2 class="title mb-1">Get In Touch</h2><!-- End .title mb-2 -->
                    <p class="lead text-primary">
                        We collaborate with ambitious brands and people; we’d love to build something great together.
                    </p><!-- End .lead text-primary -->
                    <p class="mb-3">Vestibulum volutpat, lacus a ultrices sagittis, mi neque euismod dui, eu pulvinar nunc sapien ornare nisl. Phasellus pede arcu, dapibus eu, fermentum et, dapibus sed, urna.</p>
                </div><!-- End .text-center -->

             

                    <input type="text" placeholder="Enter Your Name" class="form-control" name="FullName" value="" data-val="true" data-val-required="The Full Name field is required." id="ContactUs_FullName">


                    <input type="email" placeholder="Enter Your Email" class="form-control" name="Email" value="" data-val="true" data-val-required="The Email field is required." id="ContactUs_Email">


                    <input type="number" placeholder="Enter Your Phone" class="form-control" name="Number" value="" id="ContactUs_Number">


                    <input type="text" placeholder="Enter Subject" class="form-control" name="Subject" value="" data-val="true" data-val-required="The Subject field is required." id="ContactUs_Subject">


                    <textarea name="Message" class="form-control" placeholder="Type your message" rows="8" data-val="true" data-val-required="The Message field is required." id="ContactUs_Message"></textarea>


                    <div id="ShowToster"></div>
                    <button type="submit" class="btn-custom primary" name="BtnSave" id="BtnSave">
                        Submit <i class="fas fa-arrow-right"></i>
                    </button>

                    @*<div class="text-center">
                        <button type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm">
                            <span>SUBMIT</span>
                            <i class="icon-long-arrow-right"></i>
                        </button>
                    </div>*@<!-- End .text-center -->
               
        </div><!-- End .col-md-9 col-lg-7 -->
        </div><!-- End .row -->
    </div><!-- End .container -->
</div><!-- End .page-content -->

<script src="~/lib/jquery/jquery.js"></script>
<script type="text/javascript">
    $(function () {
        $("#BtnSave").click(function () {
            var btn = $(this);
            btn.prop('disabled', true);
            debugger;
            let FullName = $("#ContactUs_FullName").val()
            let Email = $("#ContactUs_Email").val()
            let Subject = $("#ContactUs_Subject").val()
            let Message = $("#ContactUs_Message").val()
            let AlertPopUp = "   <div class='toast' data-autohide='false'> " +
                                        "  <div class='toast-body {{COLOR}}'> " +
                                        "    {{MESSAGE}} " +
                                        "    <button type='button' class='ml-2 mb-1 close' data-dismiss='toast'>&times;</button> " +
                                        "  </div> " +
                                        "</div> ";
            $.ajax({
                type: "POST",
                url: "/Home/SaveContactUs",
                data: { Id: 0, FullName: FullName, Email: Email, Number: "", Subject: Subject, Message: Message , FormType : 1},
                success: function (response) {
                    btn.prop('disabled', false);
                    var a = response;
                    if (a == 1) {

                        AlertPopUp = AlertPopUp.replace("{{MESSAGE}}", "Email Send");
                        AlertPopUp = AlertPopUp.replace("{{COLOR}}", "btn-success");
                        $("#ShowToster").append(AlertPopUp);
                        $('.toast').toast('show');

                    }
                    else{
                        alert("Email Send Failed");
                        AlertPopUp = AlertPopUp.replace("{{MESSAGE}}", "Email Send Failed");
                        AlertPopUp = AlertPopUp.replace("{{COLOR}}", "btn-danger");
                        $("#ShowToster").append(AlertPopUp);
                        $('.toast').toast('show');
                    }


                },
                failure: function (response) {
                    alert(response.responseText);
                    AlertPopUp = AlertPopUp.replace("{{MESSAGE}}", "Email Send Failed");
                    AlertPopUp = AlertPopUp.replace("{{COLOR}}", "btn-danger");
                    $("#ShowToster").append(AlertPopUp);
                    $('.toast').toast('show');
                    btn.prop('disabled', false);
                },
                error: function (response) {
                    alert(response.responseText);
                    AlertPopUp = AlertPopUp.replace("{{MESSAGE}}", "Email Send Failed");
                    AlertPopUp = AlertPopUp.replace("{{COLOR}}", "btn-danger");
                    $("#ShowToster").append(AlertPopUp);
                    $('.toast').toast('show');
                    btn.prop('disabled', false);
                }
            });
        });
    });

    function SetPopUpValue(  PopupHtml , Message ,color ) {

        PopupHtml = PopupHtml.replace("{{MESSAGE}}", Message);
        PopupHtml = PopupHtml.replace("{{COLOR}}", color);
        $("#ShowToster").append(AlertPopUp);
        $('.toast').toast('show');

    }

</script>