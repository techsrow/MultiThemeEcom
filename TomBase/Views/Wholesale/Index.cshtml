                <input type="text" placeholder="Phone No." class="form-control" name="Number" asp-for="Number" value="">

            </div>

            <div class="form-group col-lg-12">

                <input type="email" placeholder="Email Address" class="form-control" name="Email" asp-for="Email" value="">

            </div>

            <div class="form-group col-lg-12">

                <input type="text" placeholder="Subject" class="form-control" name="Subject" asp-for="Subject" value="">

            </div>

            <div class="form-group col-lg-12">

                <textarea class="form-control" placeholder="Type your message" rows="8" asp-for="Message" name="Message"></textarea>

            </div>

        </div>

        @*<button type="submit" class="btn-custom primary" id="BtnSave" name="BtnSave">Submit</button>*@
        <button type="submit" class="btn-custom primary" name="BtnSave" id="BtnSave" onclick="SaveContactus()">
